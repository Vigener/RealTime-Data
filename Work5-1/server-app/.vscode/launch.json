{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Server_Extended",
            "request": "launch",
            "mainClass": "io.github.vgnri.client.Server_Extended",
            "projectName": "server-app"
        },
        {
            "type": "java",
            "name": "Client",
            "request": "launch",
            "mainClass": "io.github.vgnri.client.Client",
            "projectName": "server-app",
            "args": "${input:clientArgs}"
        }
    ],
    "inputs": [
        {
            "id": "clientArgs",
            "type": "pickString",
            "description": "Select arguments for the Client",
            "options": [
                "-count 20 10",
                "-time 5 3"
            ]
        }
    ]
}